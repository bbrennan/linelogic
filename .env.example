# LineLogic Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Data Provider: BALLDONTLIE
BALLDONTLIE_API_KEY=
BALLDONTLIE_TIER=free
BALLDONTLIE_RPM=5

# Feature Flags
USE_NBA_API=false

# Cache Settings
CACHE_TTL_SECONDS=86400
CACHE_DB_PATH=.linelogic/cache.db

# Rate Limiting
GLOBAL_RPM=5

# Storage
DATABASE_PATH=.linelogic/linelogic.db

# Application
LOG_LEVEL=INFO
USER_AGENT=LineLogic/0.1.0 (github.com/linelogic/linelogic)

# Optional: Other providers (future)
# ODDS_API_KEY=
# WEATHERAPI_KEY=
