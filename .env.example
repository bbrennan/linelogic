# LineLogic Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Data Provider: BALLDONTLIE
BALLDONTLIE_API_KEY=
BALLDONTLIE_TIER=free
BALLDONTLIE_RPM=5

# Cache Settings
# Cache Settings
CACHE_TTL_SECONDS=86400
CACHE_DB_PATH=.linelogic/cache.db

# Rate Limiting
GLOBAL_RPM=5

# Storage
DATABASE_PATH=.linelogic/linelogic.db

# Application
LOG_LEVEL=INFO
USER_AGENT=LineLogic/0.1.0 (github.com/linelogic/linelogic)

# Email (SMTP)
# Provider selection: smtp or sendgrid
EMAIL_PROVIDER=smtp

# Gmail SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true

# Account and sender
# Set to your Gmail address
SMTP_USER=
FROM_EMAIL=

# App Password (NOT your normal password)
# Generate in Google Account > Security > App passwords
# Paste 16-char app password here without spaces
SMTP_PASS=

# Optional: Other providers (future)
# ODDS_API_KEY=
# WEATHERAPI_KEY=
